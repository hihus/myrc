filetype plugin indent on
nmap <C-=> <ESC>:Tabularize /=<CR>
nmap <C-,> <ESC>:Tabularize /,<CR>
nmap <C-n> :NERDTreeToggle<CR>
"let NERDTreeQuitOnOpen = 1
nmap <C-l> :TlistToggle<CR>
let Tlist_Show_One_File = 0
